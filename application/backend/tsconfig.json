{
    "compilerOptions": {
      "module": "ESNext",
      "target": "ESNext",
      "moduleResolution": "node",
      "esModuleInterop": true,
      "skipLibCheck": true,
      "strict": true,
      "rootDir": "./",
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "@config/*": ["src/config/*"],
        "@shared/*": ["src/shared/*"],
        "@models/*": ["src/models/*"],
        "@services/*": ["src/services/*"],
        "@controllers/*": ["src/controllers/*"],
        "@middlewares/*": ["src/middlewares/*"],
        "@routes/*": ["src/routes/*"],
        "@workers/*": ["src/workers/*"],
        "@prisma-generated/*": ["prisma/generated/prisma/*"]
      }
    },
    "include": ["src/**/*", "prisma/**/*"],
    "exclude": ["node_modules"]
  }